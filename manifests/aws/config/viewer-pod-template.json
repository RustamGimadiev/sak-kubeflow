{
  "spec": {
    "serviceAccountName": "default-editor",
    "containers": [
      {
        "env": [
          {
            "name": "AWS_ACCESS_KEY_ID",
            "valueFrom": {
              "secretKeyRef": {
                "name": "aws-s3-secrets",
                "key": "aws-access-key-id"
              }
            }
          },
          {
            "name": "AWS_SECRET_ACCESS_KEY",
            "valueFrom": {
              "secretKeyRef": {
                "name": "aws-s3-secrets",
                "key": "aws-secret-access-key"
              }
            }
          },
          {
            "name": "AWS_REGION",
            "valueFrom": {
              "configMapKeyRef": {
                "name": "aws-config",
                "key": "aws-region"
              }
            }
          }
        ]
      }
    ]
  }
}